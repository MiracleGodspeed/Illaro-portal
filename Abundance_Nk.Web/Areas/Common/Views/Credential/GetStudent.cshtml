<div class="card mb-3">
    <div class="card-body overflow-scroll">

        @if (Model != null)
        {
            <div class="shadow p-3">
                @if (Model.PersonId > 0)
                {

                <!---------------------------------------------------------------------Payment History---------------------------------------------------------------->

                    <div class="row">
                        <div class="col-md-12 mb-3">

                            <div class="id-card-light border-none px-3 py-4" style="width: 100% !important;">
                                <div class="">
                                    <div class="">
                                        <div class="d-flex justify-content-start">
                                            <div class="mr-5" style="width: 200px;">
                                                <div>
                                                    <p class="text-xs font-weight-bold text-capitalize mb-0 d-inline mr-2">STUDENT NAME: </p>
                                                    <p class="text-sm font-weight-800 text-theme mt-1 d-inline">@Model.Name</p>
                                                </div>
                                            </div>

                                            <div class="">
                                                <div>
                                                    <p class="text-xs font-weight-bold text-capitalize mb-0 d-inline mr-2">MATRIC NO</p>
                                                    <p class="text-sm font-weight-800 text-theme mt-1">@Model.MatricNo</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-start">
                                            <div class="mr-5" style="width: 200px;">
                                                <div>
                                                    <p class="text-xs font-weight-bold text-capitalize mb-0">PROGRAMME</p>
                                                    <p class="text-sm font-weight-800 text-theme mt-1">@Model.Programme</p>
                                                </div>
                                            </div>

                                            <div class="">
                                                <div>
                                                    <p class="text-xs font-weight-bold text-capitalize mb-0">DEPARTMENT</p>
                                                    <p class="text-sm font-weight-800 text-theme mt-1">@Model.Department</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-start">
                                            <div class="mr-5" style="width: 200px;">
                                                <div>
                                                    <p class="text-xs font-weight-bold text-capitalize mb-0">POSSIBLE YEAR OF GRADUATION</p>
                                                    <p class="text-sm font-weight-800 text-theme mt-1">@Model.GraduationYear</p>
                                                </div>
                                            </div>

                                            <div class="">
                                                <div>
                                                    <p class="text-xs font-weight-bold text-capitalize mb-0">BLOOD GROUP</p>
                                                    <p class="text-sm font-weight-800 text-theme mt-1">@Model.BloodGroup</p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">

                            <div class="id-card-light px-3 pb-4 pt-0 border-none" style="width: 100% !important;">
                                <h3>Payment History</h3>
                                <table class="table table-responsive table-bordered table-striped table-hover mt-2" id="myTable">
                                    <thead>
                                        <tr>
                                            <th>
                                                SN
                                            </th>
                                            <th>
                                                Purpose of Payment
                                            </th>
                                            <th>
                                                Invoice No.
                                            </th>
                                            <th>
                                                Payment Reference
                                            </th>

                                            <th>
                                                Payment Date
                                            </th>
                                            <th>
                                                Amount
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Payments.Count; i++)
                                        {
                                            int sn = i + 1;

                                            <tr>
                                                <td class="col-lg-1 col-md-1 col-sm-1">
                                                    @sn
                                                </td>
                                                <td class="col-lg-3 col-md-3 col-sm-3">
                                                    @Model.Payments[i].FeeTypeName
                                                </td>
                                                <td class="col-lg-3 col-md-3 col-sm-3">
                                                    @Model.Payments[i].InvoiceNumber
                                                </td>
                                                <td class="col-lg-3 col-md-3 col-sm-3">
                                                    @Model.Payments[i].ConfirmationOrderNumber
                                                </td>
                                                <td class="col-lg-3 col-md-3 col-sm-3">
                                                    @Model.Payments[i].PaymentDate
                                                </td>
                                                <td class="col-lg-3 col-md-3 col-sm-3">
                                                    @Model.Payments[i].Amount
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>


                    </div>
                }
                else
                {
                    <div>
                        <p>No Record found</p>
                    </div>
                }
            </div>

        }


    </div>
</div>
