                                            @Html.ValidationMessageFor(model => model.TouristAttractionFee, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-9" style="font-size:24px">
                                            @Html.LabelFor(model => model.TouristAttractionFee, new { @class = "control-label custom-text-white text-large" })
                                        </div>

                                    </div>
                                    Tour Sights | Olusegun Obasanjo Presidential Library
                                </div>
                            </div>
                            <hr style="margin-top:0" />
                            <h2>Total Amount to be Paid - ₦ <span id="TotalFee" class="text-right">100</span></h2>
                            <hr style="margin-top:0" />

                        </div>

                    </div>


                    <div class="col-md-1"></div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-sm-10 ">

                            <div class="form-group">

                                <div class="col-md-8" style="font-size:24px">
                                    @Html.LabelFor(m => m.File, new { @class = "control-label custom-text-black" })

                                </div>
                                <div class="col-md-4" style="font-size:24px">
                                    @Html.TextBoxFor(m => m.File, new { id = "file", type = "file", style = "color:blue; padding:10px;", @class = "form-control custom-text-black", required = "required" })
                                      @Html.ValidationMessageFor(m => m.File, null, new { @class = "text-danger" })
                                       
                                </div>

                            </div>
                        </div>
                        <div class="col-md-1"></div>
                    
                </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-sm-10 ">
                            <div class="form-inline">
                                <div class="form-group">
                                    <input class="btn btn-success btn-lg mr5" type="submit" name="submit" id="submit" value="Register" />


                                </div>
                            </div>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </div>
                <!-- panel-footer -->


            </div><!-- panel -->
        </div><!-- panel-body -->



    </div>











}




