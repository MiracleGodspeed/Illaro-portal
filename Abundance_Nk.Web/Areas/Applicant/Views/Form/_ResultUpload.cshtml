                                    <div class="col-md-12">
                                        @if (Model.PreviousEducation.ResultCopyUrl != null)
                                        {
                                            <a href="@Url.Content(Model.PreviousEducation.ResultCopyUrl)" height="100" width="100"><i class="glyphicon glyphicon-cloud-download"></i>Result</a>
