                                        {
                                            <a href="@Url.Content(Model.PreviousEducation.CertificateCopyUrl)" height="100" width="100"><i class="glyphicon glyphicon-cloud-download"></i>Certificate</a>
                                        }
                                        else
                                        {
                                            <img id="certificateImage" src="~/Content/Images/edit_icon.png" height="100" width="100">
