                                        else
                                        {
                                            <img id="resultImage" src="~/Content/Images/edit_icon.png" height="100" width="100">
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="col-md-12" for="resultImage">IT Letter of Completion</label>
                                    <div class="col-md-12">
                                        @if (Model.PreviousEducation.ITLetterOfCompletion != null)
                                        {
                                            <a href="@Url.Content(Model.PreviousEducation.ITLetterOfCompletion)" height="100" width="100"><i class="glyphicon glyphicon-cloud-download"></i>IT Letter of Completion</a>
                                        }
                                        else
