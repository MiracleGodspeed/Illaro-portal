            {
                <dt class="space-bottom custom-text-black">
                    @Html.DisplayNameFor(model => model.ApplicationFormSetting.ExamDate)
                </dt>

                <dd class="space-bottom custom-text-black">
                    To be announced shortly
                </dd>
