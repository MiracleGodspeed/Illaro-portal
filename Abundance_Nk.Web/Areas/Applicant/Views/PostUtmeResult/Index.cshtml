@model Abundance_Nk.Web.Areas.Applicant.ViewModels.PostUtmeResultViewModel

@{
    ViewBag.Title = "PUTME RESULT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PUTME RESULT</title>
</head>
<body>
   
    <div class="container">
        <div class="row">
            <div>
                @if (TempData["Message"] != null)
            {
                    @Html.Partial("_Message", (Abundance_Nk.Model.Model.Message)TempData["Message"])
                }
            </div>

       
          
                    <div class="">
                        <div class="row">
                            <div class="col-md-6">
                                <img src="@Url.Content("~/Content/Images/results.jpg")" class="margin-both" alt="" width="100%" />
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title text-center">CHECK SCREENING RESULT</h3>
                                    </div>
                                    <div class="panel-body">
                                        <h6>Please enter the RRR Number for application to view your screening result</h6>
                                        @using (Html.BeginForm("Index", "PostUtmeResult", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()


                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div id="basic-addon1">Programme</div>
                                                            @Html.DropDownListFor(model => model.Programme.Id, (IEnumerable<SelectListItem>)ViewBag.ProgrammeId, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(model => model.Programme.Id, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-md-6"><div class="form-group">
                                                        <div id="basic-addon1">Application No</div>
                                                            @Html.TextBoxFor(model => model.JambRegistrationNumber, new { @class = "form-control", @placeholder = "Enter your Application Number" })
                                                            @Html.ValidationMessageFor(model => model.JambRegistrationNumber, null, new { @class = "text-danger" })
                                                        </div>
                                                </div>


                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <div id="basic-addon1">RRR NO.</div>
                                                            @Html.TextBoxFor(model => model.PinNumber, "RRR", new { @class = "form-control", @placeholder = "Enter RRR" })
                                                            @Html.ValidationMessageFor(model => model.PinNumber, null, new { @class = "text-danger" })
                                                        </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="col-md-offset-6">
                                                        <button class="btn btn-success " type="submit">Check Result</button>
                                                    </div>
                                                </div>
                                                </div>
                                                <br/>
                                            
                                  

                                           
                              
                                           
                             

                                          
                                        }
                                    </div>
                                    <div class="panel-footer">
                                        <p class="text-center">
                                            If you encounter any issues kindly send an email to <cite>support@lloydant.com</cite> or  call <cite>07088391544</cite>
                                        </p>
                                        <br />
                                    </div>

                                </div>
                            </div>
                        </div>
                   
                    </div>
       
          
        </div>


    </div>
</body>
    </html>


