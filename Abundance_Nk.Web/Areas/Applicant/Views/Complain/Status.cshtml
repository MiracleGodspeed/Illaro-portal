@model Abundance_Nk.Model.Model.ComplaintLog

@{
    ViewBag.Title = "Complain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Check Complain Status</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.TicketID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TicketID, new { @class = "form-control", @placeholder = "e.g ILR0000000001" })
            @Html.ValidationMessageFor(model => model.TicketID, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Check Status" class="btn btn-default" />
        </div>
    </div>
}

