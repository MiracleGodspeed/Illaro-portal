        $("#Session").change(function() {
            $("#Semester").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetSemester", "Support")', // Calling json method
                dataType: 'json',
                data: { id: $("#Session").val() },

                success: function(semesters) {
                    $("#Semester").append('<option value="' + 0 + '">' +
