@model Abundance_Nk.Web.Areas.Admin.ViewModels.MenuViewModel
@{
    ViewBag.Title = "AddMenuInRole";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
 
<div class="col-md-8 ml-auto mr-auto">
   
    @if (TempData["Message"] != null)
    { 
        @Html.Partial("_Message", (Abundance_Nk.Model.Model.Message)TempData["Message"])
    }
    <div class="card card-shadow">
        <div class="card-header">
            <h4 class="card-title">Add Menu For Role</h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("AddMenuInRole", "Menu", new { Area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
              
                    <div class="row">
                        @Html.ValidationSummary(true)
                       
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Menu.DisplayName, "Menu", new { @class = "col-md-12 control-label" })
                                <div class="col-md-12">
                                    @Html.DropDownListFor(m => m.Menu.Id, (IEnumerable<SelectListItem>)ViewBag.Menu, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Menu.Id, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Role.Name, "Role", new { @class = "col-md-12 control-label" })
                                <div class="col-md-12">
                                    @Html.DropDownListFor(m => m.Role.Id, (IEnumerable<SelectListItem>)ViewBag.Role, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Role.Id, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        @*<div class="form-group">
                            @Html.LabelFor(m => m.RoleMenu.Activated, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.RoleMenu.Activated, new[] { new SelectListItem { Text = "True", Value = "1" }, new SelectListItem { Text = "False", Value = "0" } }, new { @class = "form-control", required = "required" })
                               
                                @Html.ValidationMessageFor(m => m.RoleMenu.Activated, null, new { @class = "text-danger" })
                            </div>
                        </div>*@

                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <input type="submit" value="Submit" class="btn btn-success" />
                                </div>
                            </div>
                        </div>


                        </div>
           
            }

        </div>

    </div>
    
    


</div>
